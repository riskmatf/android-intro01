<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rs.ac.bg.matf.risk.androidintrocourse01.MainActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dobro dosli na mini kurs razvoja Android aplikacija!"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/archBlue"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:id="@+id/textView"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/gridLayout">

        <ImageView
            android:id="@+id/navCalculator"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/calculator"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="41dp"/>

        <ImageView
            android:id="@+id/navTimer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/timer"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="248dp"/>

        <ImageView
            android:id="@+id/navBlog"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="1"
            app:srcCompat="@drawable/blog"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="248dp"/>

        <ImageView
            android:id="@+id/navQuiz"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="1"
            app:srcCompat="@drawable/quiz"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="248dp"/>

    </GridLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/risk_logo_square"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintHorizontal_bias="0.505"/>

</android.support.constraint.ConstraintLayout>
